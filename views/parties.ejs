<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Election App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/voterregistration">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar and Main Content Wrapper -->
    <div class="d-flex mt-5 pt-4">
        <!-- Sidebar -->
        <div class="sidebar p-3 bg-light border-end" style="min-width: 220px;">
            <h5 class="fw-bold">Dashboard</h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link active" href="/dashboard">Home</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/voter">Voters</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/parties">Parties</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/position">Position</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/contestants">Contestants</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/elections">Elections</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/users">Users</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content p-4" style="flex: 1;">
            <div class="container">
                <h1 class="mb-4">Total Parties</h1>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header">
                                <h5 class="card-title">Parties</h5>
                            </div>
                            <div class="card-body">
                                <table class="table table-striped">
                                    <tbody>
                                        <% parties.forEach(party=> { %>
                                            <tr>
                                                <td>
                                                    <%= party.party %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>